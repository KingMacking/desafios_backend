{{#if product}}
    <div>
        <h2>{{product.title}}</h2>
        <p>Descripcion: {{product.description}}</p>
        <p>${{product.price}}</p>
        <p>Codigo: {{product.code}}</p>
        <p>Stock: {{product.stock}}</p>
        <p>Categoria: {{product.category}}</p>
        <p>ID: <span id="prodId">{{product._id}}</span></p>
        <button id="addToCart">Agregar al carrito</button>
        <img height="300px" src={{product.thumbnail}} alt="product image"/>
        {{#if canDelete}}
            <button id="deleteProduct">Eliminar producto</button>
        {{/if}}
    </div>
{{else}}
    <h2>El producto con el ID {{product.id}} no existe</h2>
{{/if}}
<script type="module" src="/js/product.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/toastify-js"></script>