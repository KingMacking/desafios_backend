{{#if hasProducts}}
    {{#each products}}
        <div>
            <h3>{{this.title}}</h3>
            <p>${{this.price}}</p>
            <p>
                <a href="http://localhost:3000/products?category={{this.category}}">{{this.category}}</a>
            </p>
            <p>
                <a href="http://localhost:3000/products/{{this.id}}">Ver detalle</a>
            </p>
            <img height="300px" src={{this.thumbnail}} alt="product image"/>
        </div>
    {{/each}}
{{else}}
    <h2>La lista de productos esta vacia</h2>
{{/if}}