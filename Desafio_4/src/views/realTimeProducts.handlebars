<form id="newProductForm" >
    <label for="title">Nombre:</label>
    <input type="text" id="title" name="title">

    <label for="description">Descripcion:</label>
    <input type="text" id="description" name="description">

    <label for="price">Precio:</label>
    <input type="number" id="price" name="price">

    <label for="stock">Stock:</label>
    <input type="number" id="stock" name="stock">

    <label for="code">Codigo</label>
    <input type="text" id="code" name="code">

    <label for="category">Categoria:</label>
    <input type="text" id="category" name="category">

    <label for="thumbnail">URL de la imagen:</label>
    <input type="url" id="thumbnail" name="thumbnail">

    <button type="submit">Agregar producto</button>
</form>

<div id="productsList"></div>

<script defer type="text/x-handlebars-template" id="productTemplate">
    {{#if products.length}}
        <h2>Lista de productos</h2>
        {{#each products}}
            <div>
                <h2>{{this.title}}</h2>
                <p>Descripcion: {{this.description}}</p>
                <p>${{this.price}}</p>
                <p>Codigo: {{this.code}}</p>
                <p>Stock: {{this.stock}}</p>
                <p>Categoria: {{this.category}}</p>
                <p>ID: {{this.id}}</p>
                <img src={{this.thumbnail}} alt="product image"/>
            </div>
        {{/each}}
    {{else}}
        <h2>La lista no contiene productos</h2>
    {{/if}}
</script>

<script type="text/javascript" src="js/index.js"></script>
<script src="/socket.io/socket.io.js"></script>